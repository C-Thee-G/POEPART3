@model POEPART3.Models.AuthorisedUser

@{
    ViewData["Title"] = "AuthorisedUsersLogin";
}

<style>
    body {
        background-color: #f8f9fa;
    }

    h1 {
        color: #AA1AED;
        text-align: center;
        margin-top: 50px;
    }

    .container {
        margin-top: 30px;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .control-label {
        color: #6c757d;
    }

    .form-control {
        border: 2px solid #AA1AED;
        border-radius: 5px;
    }

    .btn {
        background-color: #AA1AED;
        color: #ffffff;
    }

        .btn:hover {
            background-color: #6c757d;
        }

    a {
        color: #AA1AED;
        display: block;
        text-align: center;
        margin-top: 20px;
        text-decoration: none;
    }

        a:hover {
            color: #6c757d;
        }
</style>

<h1>Authorised Users Login</h1>

<hr />
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="AuthorisedUsersLogin">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="UserNames" class="control-label">User Name</label>
                    <input asp-for="UserNames" class="form-control" />
                    <span asp-validation-for="UserNames" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="UserPassword" class="control-label">User Password</label>
                    <input asp-for="UserPassword" class="form-control" type="password" />
                    <span asp-validation-for="UserPassword" class="text-danger"></span>
                </div>
                <div class="form-group text-center">
                    <input type="submit" value="Login" class="btn btn-lg w-75" />
                </div>
            </form>
        </div>
    </div>
</div>

<div class="text-center">
    <a asp-action="AuthorisedUsersRegister" class="text-white">Create account?</a>
    <a asp-action="Index" class="text-white">Back to Home</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
